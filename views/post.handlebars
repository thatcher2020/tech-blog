<div class="container my-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card mb-3">
        <div class="card-header">
          <h2>{{post.title}}</h2>
          <p class="text-muted">By {{post.user.username}} on {{format_date post.date_created}}</p>
        </div>
        <div class="card-body">
          <p>{{post.post_content}}</p>
        </div>
      </div>

      <h3 class="mb-4">Comments:</h3>
      {{#each comments as |comment|}}
      <div class="card my-2">
        <div class="card-header">
          <p class="text-muted">By {{comment.user.username}} on {{format_date comment.comment_date}}</p>
        </div>
        <div class="card-body">
          <p>{{comment.comment}}</p>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>
