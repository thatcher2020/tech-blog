<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div id="profile-header" class="d-flex justify-content-between align-items-center bg-light p-3 rounded mb-3">
                    <h2>Welcome, {{username}}!</h2>
                    <a class="btn btn-primary" href="/post" id="new-post-btn">+ New Post</a>
                </div>
            </div>
        </div>

        {{#if posts.length}}
        <div class="row">
            {{#each posts as |post|}}
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <img class="card-img-top img-fluid" id="user-prof-pic" src="./images/Josh Lutz_DC.jpg" alt="Profile Image">
                        <a href="/posts/{{post.id}}" class="btn btn-light" id="edit-post-btn">Edit</a>
                    </div>
                    <div class="card-body">
                        <h4 class="card-title">{{post.title}}</h4>
                        <p class="card-text">Created by {{user.username}} on {{format_date post.date_created}}</p>
                        <p class="card-text">{{post.post_content}}</p>
                        {{#if comments}}
                        <div class="comments">
                            {{#each comments}}
                            <div class="comment mb-2">
                                <p class="mb-0">&#10095; {{comment}}</p>
                                <div class="d-flex justify-content-between">
                                    <span class="text-muted small">{{user.username}}</span>
                                    <span class="text-muted small">{{format_date comment_date}}</span>
                                </div>
                            </div>
                            {{/each}}
                        </div>
                        {{/if}}
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        {{else}}
        <div class="row">
            <div class="col-12">
                <h6 class="text-center font-italic pb-4">Start Posting!</h6>
            </div>
        </div>
        {{/if}}
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>
